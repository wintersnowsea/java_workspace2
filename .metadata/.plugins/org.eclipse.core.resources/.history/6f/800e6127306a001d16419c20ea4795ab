package util;

import java.awt.Image;
import java.io.IOException;
import java.net.URL;

import javax.imageio.ImageIO;

public class ImageManager {
	Image image;
	
	//이미지에 대한 경로를 전달하면, 이미지 객체를 반환하는 메서드 정의
	public Image[] createImages() {
		 //현재 클래스에 대한 정보를 가진 클래스를 얻는다
		Class myClass=this.getClass();
		
		Image[] images=new Image[];
		
		//URL url=null; //자원의 위치를 의미, 패키지경로도 처리가능
		URL url=myClass.getClassLoader().getResource("res/hero/image1.png");
		
		
		try {
			image=ImageIO.read(url); //이미지얻기
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
