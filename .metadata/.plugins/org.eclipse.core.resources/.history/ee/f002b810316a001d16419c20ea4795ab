package image;

import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.io.IOException;
import java.net.URL;

import javax.imageio.ImageIO;
import javax.swing.JFrame;
import javax.swing.JPanel;

import util.ImageManager;

//자바에서 이미지를 얻는 방법은 번거로운 Toolkit만 있는것이 아니다!!
//사용중인 OS의 디렉토리를 명시하는 것보다 클래스패스를 통한 차원접근이 더 자바스럽고,
//플랫폼에 중립적이다
//따라서 자원들도 package에 담을 수 있다
public class HeroControl extends JFrame {
	JPanel p;
	Image image;
	ImageManager imageManager;
	String[] imgName= {"res/hero/image1.png"};
	
	public HeroControl() {
		/*//클래스에 대한 정보를 가진 클래스
		Class myClass=this.getClass();
		Method[] methods=myClass.getMethods();
		for(Method m : methods) {
			System.out.println(m.getName());
		}*/
		
		imageManager = new ImageManager();
		imageManager.createImages();
		
		p=new JPanel() {
			protected void paintComponent(Graphics g) {
				Graphics2D g2= (Graphics2D)g;
				
				//this는 익명함수를 말하기 때문에 어떤 클래스의 this인지 명시가능
				g2.drawImage(image, 50, 50, 100, 100, HeroControl.this); 
			}
		};
		add(p);
		
		
		setSize(800,600);
		setVisible(true);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setLocationRelativeTo(null); //화면중앙에 프레임놓기
	}
	
	
	public static void main(String[] args) {
		new HeroControl();
	}
}
