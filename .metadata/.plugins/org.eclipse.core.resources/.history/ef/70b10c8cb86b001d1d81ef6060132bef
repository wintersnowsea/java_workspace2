package page;

import java.sql.DriverManager;
import java.sql.SQLException;

//자바언어에서 DBMS를 연동해보는 실습
public class OrableTest {
	public static void main(String[] args) {
		
		//알맞는 드라이버를 메모리에 로드하자
		//지정한 문자열의 경로의 클래스를 메모리에 로드시킴
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			System.out.println("드라이버 로드 성공");
		} catch (ClassNotFoundException e1) {
			System.out.println("드라이버가 존재하지 않습니다");
			e1.printStackTrace();
		}
		
		//켜져 있는 오라클 서버에 접속해보자!!
		
		//접속url은 정해져있는 규칙을 따른다
		//jdbc를 통해 들어갈꺼고 방식은 thin방식이야, 기종은 oracle이고 나는 나(localhost)에 접근할꺼야
		String url="jdbc:thin:oracle:@localhost:1521:XE"; 
		String user="java";
		String pass="1234";
		

	}
}
